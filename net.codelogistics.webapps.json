{
    "app-id": "net.codelogistics.webapps",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "webapps",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=xdg-data"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddocs=false",
                "-Dintrospection=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/libportal.git",
                    "tag": "0.9.0",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    },
                    "commit": "731e7410fa5765e7c4eb76a51140a19637620c13"
                }
            ]
        },
        {
            "name": "webapps",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://codeberg.org/eyekay/webapps.git",
                    "tag": "0.5.8",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    },
                    "commit": "e686530899f1cf0391b5b8e3dba81d72baa6db67"
                }
            ]
        }
    ]
}
